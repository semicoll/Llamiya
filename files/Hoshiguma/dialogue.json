      "audio": {
        "JP": "Hoshiguma-002.ogg",
        "CN": "Hoshiguma-002-CN.ogg",
        "EN": "Hoshiguma-002-EN.ogg",
        "KR": "Hoshiguma-002-KR.ogg"
