      "audio": {
        "JP": "Hoshiguma-006.ogg",
        "CN": "Hoshiguma-006-CN.ogg",
        "EN": "Hoshiguma-006-EN.ogg",
        "KR": "Hoshiguma-006-KR.ogg"
