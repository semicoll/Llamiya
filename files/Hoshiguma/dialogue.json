      "audio": {
        "JP": "Hoshiguma-003.ogg",
        "CN": "Hoshiguma-003-CN.ogg",
        "EN": "Hoshiguma-003-EN.ogg",
        "KR": "Hoshiguma-003-KR.ogg"
